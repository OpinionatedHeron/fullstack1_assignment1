<form class="box" action="/folder/{{folder._id}}/addlocation" method="POST">
  <label>Enter Location Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Location Name" name="title">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Location Category" name="category">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Location Description" name="description">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Location</button>
</form>
