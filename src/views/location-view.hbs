{{> menu}}

<form class="box"  action="/location/{{folder._id}}/updatelocation/{{location._id}}" method="POST">
  <label>Update Location Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" name="title", value="{{location.title}}">
      </div>
      <div class="field">
        <input class="input" type="text" name="category" value="{{location.category}}">
      </div>
      <div class="field">
        <input class="input" type="text"  name="description" value="{{location.description}}">
      </div>
    </div>
  </div>
  <button class="button is-primary">Update Location</button>
</form>

